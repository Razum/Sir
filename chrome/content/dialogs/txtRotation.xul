<?xml version="1.0" ?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css" ?>
    <?xml-stylesheet href="chrome://sir/skin/styles/style.css" type="text/css"
    ?>
        <!DOCTYPE window SYSTEM "chrome://sir/locale/sir.dtd">
        <dialog xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
        xmlns:html="http://www.w3.org/1999/xhtml" id="txtRotationDialog" title="&txtRotation.title;"
        buttons="disabled" onload="SIR.txtRotation.init();">
            <script type="application/x-javascript" src="chrome://sir/content/scripts/items.js"></script>
            <script type="application/x-javascript" src="chrome://sir/content/scripts/utils.js"></script>
<hbox>
                        <vbox id="txtRotationField">
                            <label id="TRinscription" value="Text-Rotation" />
                        </vbox>

                                <vbox id="txtRotationControlBox">
                                    <hbox><label class="txtRotationLabels" value="Rotate:" /><scale min="0" max="360" increment="1" id="TRrotDeg" onchange="SIR.txtRotation.onParamsChange();"
                                            />
                                            <label id="TRrotDegValue" value="" /></hbox>
                                            </vbox>
                                    

</hbox>                                
<hbox class="commandBox"><label value="&txtRotation.code;" /><spacer flex="1" /><vbox><image src="chrome://sir/skin/images/copyToClipboard.png" tooltip="sir-clipboard-tt" class="copyImg" width="16px" height="16px" /></vbox></hbox>            
            <textbox id="txtRotationResult" multiline="true" readonly="true" rows="10"
            />
        </dialog>